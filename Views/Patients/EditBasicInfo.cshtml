@model Cov19.Data.Entities.Patients
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="container">
    <h3>Edit patient basic info</h3>
    <hr />
    <div class="wrapper">
        <div class="row">
            <div class="col12">
                <form asp-action="EditBasicInfo">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="NameAndSurname" class="control-lable"></label>
                        <input asp-for="NameAndSurname" class="form-control" placeholder="Enter name and surname" />
                        <span asp-validation-for="NameAndSurname" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UniqueIdNumber" class="control-lable"></label>
                        <input asp-for="UniqueIdNumber" class="form-control" placeholder="Enter unique id number" />
                        <span asp-validation-for="UniqueIdNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="IdNumber" class="control-lable"></label>
                        <input asp-for="IdNumber" class="form-control" placeholder="Enter id number" />
                        <span asp-validation-for="IdNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Adress" class="control-lable"></label>
                        <input asp-for="Adress" class="form-control" placeholder="Enter adress" />
                        <span asp-validation-for="Adress" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="City" class="control-lable"></label>
                        <input asp-for="City" class="form-control" placeholder="Enter city" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DateOfBirth" class="control-lable"></label>
                        <input asp-for="DateOfBirth" class="form-control" placeholder="Enter date of birth" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="radio" value="Male" asp-for="Gender" />Male<br />
                        <input type="radio" value="Female" asp-for="Gender" />Female<br />
                        <input type="radio" value="Unspecified" asp-for="Gender" />Unspecified<br />
                    </div>

                    <div class="form-group">
                        <label asp-for="Country" class="control-lable"></label>
                        <input asp-for="Country" class="form-control" placeholder="Enter date of birth" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="checkbox" class="checkica" asp-for="Infected"> Infected <br />
                    </div>

                    <div class="form-group">
                        <input type="checkbox" class="checkica2" asp-for="Hospitalized"> Hospitalized <br />
                        <input type="checkbox" class="checkica2" asp-for="HomeTreated"> Hometreated <br />
                    </div>

                    <div class="form-group">
                        <label asp-for="DateOfInfection" class="control-lable"></label>
                        <input asp-for="DateOfInfection" class="form-control" placeholder="Enter date of infection" />
                        <span asp-validation-for="DateOfInfection" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CauseOfInfection" class="control-label">Description</label>
                        <textarea asp-for="CauseOfInfection" rows="12" class="form-control" placeholder="Enter cause of infection"></textarea>
                        <span asp-validation-for="CauseOfInfection" class="text-danger"></span>
                    </div>

                    <div>
                        <input type="hidden" asp-for="Recovered" />
                        <input type="hidden" asp-for="Dead" />
                        <input type="hidden" asp-for="DateOfRecoveryDeath" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="EditBasicInfo" class="btn btn-block btn-primary" />
                    </div>

                </form>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <Script>

        $('input[type="checkbox"]').on('change', function() {
        $('input[class="' + this.className + '"]').not(this).prop('checked', false);
        });

    </Script>
}